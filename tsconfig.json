{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "lib": [
            "ESNext"
        ],
        "rootDirs": [
            "src",
            "types"
        ],
        "baseUrl": ".",
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noEmit": true
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
